<%= javascript_include_tag "LessonEdit" %>

<div id="lesson-edit">
  <h1>Editing <%= @lesson.name %></h1>
  
  <div id="video-area">
    <div id="video-player"></div>
    <div id="video-url-div">
      Youtube URL: <input type ="text" id = "load_video_url" /><a href="#" id="load-video">Load video</a>
    </div>
  </div>

  <div id="events-area">
    <%= render @events %> 
  </div>

  <div id="add-note">
    <%= render :partial => 'notes/form', :locals => { :lesson => @lesson } %> 
  </div>

</div>
