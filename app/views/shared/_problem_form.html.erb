<%= form_for @problem, :html => {:multipart => true}  do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :statement%><br />
    <%= f.text_area :statement%>
  </div>
  <div class = "field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <% if @course %>
    <%= f.hidden_field :course_id, :value => @course.id %>
  <% end %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
