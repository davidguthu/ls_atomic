<%= link_to "Back to problem", edit_problem_path(@step.problem) %>
<%= form_for(@step) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :order_number %>
    <%= f.text_field :order_number %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
<h2>Relate some course components!</h2>
<%= render :partial => "component", :collection => @components %>

<% if ! @videos.empty? %>
<h3>Related videos:</h3>
<%= render :partial => 'videos/video', :collection => @videos, :locals => { :edit => true } %>
<% end %>

<h3>Add another video!</h3>
<%= render 'shared/video_add_form' %>
</div>

