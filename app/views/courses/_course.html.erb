<li><%= link_to course.name, course %>
    <div id= "enroll_form">
      <% if current_user.enrolled?(course) %> 
        <%= render :partial => 'users/unenroll', :locals => { :course => course }%> 
      <%  else %>
        <%= render :partial => 'users/enroll', :locals => { :course => course } %>
      <% end %>
    </div>
</li>
