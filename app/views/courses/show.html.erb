<h1>Course: <%= @course.name %></h1>
<p><b>Description:</b> <%= @course.description %></p>

<h2>Components</h2>
<ul>
  <%= render @components %>
</ul>

<% if current_user.can_edit?(@course) %>
<h2>Create new component</h2>
<%= render 'shared/component_form' %>
<% end %>

<h2> Problems </h2>
<ul>
  <%= render @problems %>
</ul>

<% if current_user.can_edit?(@course) %>
<h2>Create new problem</h2>
<%= render 'shared/problem_form' %>
<% end %>
