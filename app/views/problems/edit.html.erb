<div class="back"> <%= link_to "Back to problem", @problem %> </div>
<%= form_for @problem, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :statement %><br />
    <%= f.text_area :statement %>
  </div>
  <div class = "field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h2>Steps</h2>
<ol>
<% @problem.steps.each do |step| %> 
  <%= render :partial => 'steps/editable_step', :locals => { :step => step } %>
<% end %>
</ol>

Add new step:
<%= render 'shared/step_form' %>

